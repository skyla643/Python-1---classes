def is_leap_year(year):
    """Function to determine if a year is a leap year."""
    # A year is a leap year if:
    # 1. It is divisible by 4, and not divisible by 100, OR
    # 2. It is divisible by 400
    if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0):
        return True
    else:
        return False  # Fixed 'false' to 'False' (Python is case-sensitive)

def main():
    while True:  # Fixed 'true' to 'True' for the infinite loop
        year_input = input('Enter a year: ')

        # Check if input is numeric
        if not year_input.isdigit():
            print('Invalid input, please enter a numeric value for the year.')
            continue

        # Convert string into integer
        year = int(year_input)

        # Check if the year is a leap year
        if is_leap_year(year):
            print(f"{year} is a leap year.")
        else:
            print(f"{year} is not a leap year.")

        break  # Exit loop after processing a valid year

if __name__ == '__main__':
    main()
