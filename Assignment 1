print("Simple Interest Calculator")

# Get user input for principal amount
while True:
    principal_input = input("Enter the principal amount: ")
    if principal_input.isdigit():
        principal = float(principal_input)
        break
    else:
        print("Please enter a valid number.")

# Get user input for rate of interest
while True:
    rate_input = input("Enter the rate of interest: ")
    if rate_input.isdigit():
        rate = float(rate_input)
        break
    else:
        print("Please enter a valid number.")

# Get user input for time period in years
while True:
    time_input = input("Enter the time period (in years): ")
    if time_input.isdigit():
        time = float(time_input)
        break
    else:
        print("Please enter a valid number.")

# Calculate simple interest
simple_interest = (principal * rate * time) / 100

# Display the result
print("The simple interest is:", simple_interest)
